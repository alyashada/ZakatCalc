<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/output_box_bg.xml -->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color for the box -->
    <item android:drawable="@android:color/white" />

    <!-- Border for the box -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#F0F0F0" /> <!-- Box background color -->
            <corners android:radius="8dp" /> <!-- the radius for rounded corners -->
        </shape>
    </item>
</layer-list>
